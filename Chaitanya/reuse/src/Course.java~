class Student {
    public static String sname;
    public static Score[] allmarks;
	public static int n,total=0;
	//public static int[] smarks;
	static Student readme(Scanner sc,int ns) {
        Student st = new Student();
        System.out.println("Enter Student name");
        st.sname = sc.nextLine();
       // System.out.println("Enter No of Subjects");
        st.n = ns;
        allmarks = new Score[n];
		int temp=0;
		//smarks = new smarks[st.n];
		for (int i = 0; i < st.n; i++) {
            st.allmarks[i] = Score.readme(new Scanner(System.in));
			System.out.println(st.allmarks[i].marks);
			temp = temp + st.allmarks[i].marks;
			
			//System.out.println("Mark are"+temp);
		}
		
		total = temp;
		return st;
	}
	public static int getTemp() {
		return total;
    }
	public static int getIndividual(String str) {
		Student st=new Student();
		for(int i=0;i<st.n;i++){
			System.out.println("\n"+st.allmarks[i].marks);
		}
	return 1;
	}

	
}
class Score {
    public static String subname;
    static int marks;
	//public static int n;
    public static Score readme(Scanner sc) {
		//System.out.println("Enter no nof subjects");

        System.out.print("Enter subject name");
        String s = sc.nextLine();
        System.out.println("Enter Marks");
        int m = sc.nextInt();
        Score sco = new Score();
        sco.subname = s;
        sco.marks = m;
        return sco;
	}

}
