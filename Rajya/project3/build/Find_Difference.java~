package com.vl.training.countdifference;
import java.util.Scanner;

public class Find_Difference {

    public void Difference() {
        int[] nos=new int[10],n,diff,diff1;
        Scanner sc=new Scanner(System.in);
        System.out.println("Enter for how many no's do you want to find the difference:");
        n=sc.nextInt();
        System.out.println("Enter "+n+" numbers:");
        for(int i=0;i<n;i++) {
            nos[i]=sc.nextInt();
        }
        diff=nos[0]-nos[1];
        for(int j=3;j<n;j++) {
            diff1=nos[j-1]-nos[j];
            if(diff1!=diff) {
                System.out.println("Difference between no's is not equal");  
                break;          
            }    
        } 
        System.out.println("Difference between no's is equal");      
    }

    public static void main(String args[]) {
        Find_Difference fd=new Find_Difference();
        fd.Difference();
    }
}
