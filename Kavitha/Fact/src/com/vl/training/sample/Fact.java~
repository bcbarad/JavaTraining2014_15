package com.vl.training.sample;
public class Fact {
	public static void main(final String[] args) {

		int a = Integer.parseInt(args[0]);
		Fact.getFact(a);

	}
	static void getFact(int a)
	{
		int sum=0,num=0,fact=1;
		for(int i=0;i<a;i++)
		{
			num=num+2;
			sum= sum+fact;
			fact=fact*(num-1)*num;
		}
		System.out.println("The Factorial sum is:"+sum);

	}
}
