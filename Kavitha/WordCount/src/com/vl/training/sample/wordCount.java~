package com.vl.training.Program;

public class wordCount {

    public static void main(final String[] args) {
        Count(args);             
    }
    public static void Count(String []args) {
        int i,count=1;
        char[] c=args.toCharArray();
        for(i=0;i<c.length;i++) {
            if(c[i]==' ') {
                i++;
                    if(c[i]!=' ') {
                        count++;
                    }          
            }
        }
            System.out.println("Words count is:" +count); 
    }
}                    
